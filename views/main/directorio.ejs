<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/directorio.css">
</head>

<body>
  <header>
    <!-- Barra superior -->
    <header class="topbar">
      <%- include('../partials/header') %>
    </header>

    <!-- Menú lateral -->
    <nav class="sidebar">
      <%- include('../partials/menuLteral') %>
    </nav>

    <main>

      <div class="directorio-container">

        <div class="section-header">
          <div class="yellow-bar"></div>
          <h2>Lista completa</h2>
        </div>
        <div class="section-divider"></div>

        <div class="filtros">

          <!-- ORDENAR POR -->
          <div class="filtro-item">
            <label>Ordenar por</label>
            <div class="select-wrapper">
              <select id="ordenar">
                <option value="release_date.desc">Por fecha</option>
                <option value="original_title.asc">Por nombre</option>
                <option value="popularity.desc">Popularidad</option>
                <option value="vote_average.desc">Rating</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- GÉNERO -->
          <div class="filtro-item">
            <label>Género</label>
            <div class="select-wrapper">
              <select id="genero">
                <option value="">Sin género</option>
                <option value="28">Acción</option>
                <option value="35">Comedia</option>
                <option value="18">Drama</option>
                <option value="10749">Romance</option>
                <option value="16">Animación</option>
                <option value="27">Terror</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- LETRA -->
          <div class="filtro-item">
            <label>Letra</label>
            <div class="select-wrapper">
              <select id="letra">
                <option value="">Sin letra</option>
                <option value="AF">A–F</option>
                <option value="GM">G–M</option>
                <option value="NZ">N–Z</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- CATEGORÍA -->
          <div class="filtro-item">
            <label>Categoría</label>
            <div class="select-wrapper">
              <select id="categoria">
                <option value="">Sin categoría</option>
                <option value="movie">Películas</option>
                <option value="tv">Series</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- AÑO -->
          <div class="filtro-item">
            <label>Año</label>
            <div class="select-wrapper">
              <select id="anio">
                <option value="">Sin año</option>
                <option value="2024">2024</option>
                <option value="2023">2023</option>
                <option value="2022">2022</option>
                <option value="2021">2021</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- ORDEN -->
          <div class="filtro-item">
            <label>Orden</label>
            <div class="select-wrapper">
              <select id="orden">
                <option value="asc">Ascendente</option>
                <option value="desc">Descendente</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- ESTADO (solo para SERIES en TMDB) -->
          <div class="filtro-item">
            <label>Estado</label>
            <div class="select-wrapper">
              <select id="estado">
                <option value="">Ninguno</option>
                <option value="Returning Series">En emisión</option>
                <option value="Ended">Completado</option>
              </select>
              <i class="fa-solid fa-chevron-down arrow"></i>
            </div>
          </div>

          <!-- BOTONES -->
          <button class="btn-filtrar">
            <i class="fa-solid fa-sliders"></i> Filtrar
          </button>

          <button class="btn-random">
            <i class="fa-solid fa-shuffle"></i> Aleatorio
          </button>

        </div>

      </div>

      <div class="grid-posters">

        <% lista.forEach(item=> { %>
          <div class="poster-card">
            <img src="https://image.tmdb.org/t/p/w500<%= item.poster_path %>" alt="<%= item.title || item.name %>">
            <p class="poster-title">
              <%= item.title || item.name %>
            </p>
          </div>
          <% }) %>

      </div>

      </div>


    </main>

    <script src="/scripts/direc.js"></script>
</body>

</html>